<div class="password">
    <h2>Change Your Password</h2>
    <div class="horizontal-separator"></div>
    <form action='/dashboard/update-password' method="POST">
        <div class="form-field">
            <label class="label" for="currentPassword">
                Current Password
            </label>
            <div class="input-wrapper">
                <span data-pass-icon class="material-symbols-sharp input-icon ">
                    key
                </span>
                <input data-pass-field class="input-field" type="password" name="currentPassword" id="currentPassword" />
                <button data-toggle-pass-visibility type="button">
                    <span class="material-symbols-sharp input-icon">
                        visibility
                    </span>
                </button>
            </div>
        </div>
        <div class="horizontal-separator"></div>
        <div class="form-field">
            <label class="label" for="newPassword">
                New Password
            </label>
            <div class="input-wrapper">
                <span data-pass-icon class="material-symbols-sharp input-icon ">
                    key
                </span>
                <input data-pass-field class="input-field" type="password" name="newPassword" id="newPassword" />
                <button data-toggle-pass-visibility  type="button">
                    <span class="material-symbols-sharp input-icon">
                        visibility
                    </span>
                </button>
            </div>
        </div>
        <div class="horizontal-separator"></div>
        <div class="form-field">
            <label class="label" for="confirmNewPassword">
                Confirm New Password
            </label>
            <div class="input-wrapper">
                <span data-pass-icon class="material-symbols-sharp input-icon ">
                    key
                </span>
                <input data-pass-field class="input-field" type="password" name="confirmNewPassword" id="confirmNewPassword" />
                <button data-toggle-pass-visibility  type="button">
                    <span class="material-symbols-sharp input-icon">
                        visibility
                    </span>
                </button>
            </div>
        </div>
        <div class="horizontal-separator"></div>
        <button class="button" type="submit">
            Change Password
        </button>
    </form>
</div>
