<div class="badges">
    <h2>Account Status</h2>
    <div class="horizontal-separator"></div>
    <div class="badges-container">
        <% if(user.is_admin) { %>
            <div class="badge is-admin" title="Admin">
                <span class="material-symbols-sharp">
                    security
                </span>
                <p class="title">Admin</p>
                <p class="description">
                    You can delete user messages
                </p>
            </div>
        <% } else { %>
            <div class="badge" title="Not An Admin">
                <span class="material-symbols-sharp">
                    gpp_bad
                </span>
                <p>Not An Admin</p>
            </div>
        <% } %>
        <div class="vertical-separator"></div>
        <div class="mobile-horizontal-separator"></div>
        <% if(user.is_member) { %>
            <div class="badge is-member" title="Member">
                <span class="material-symbols-sharp">
                    shield_with_heart
                </span>
                <p class="title">Member</p>
                <p class="description">
                    Now you can see usernames in messages and visit user profiles
                </p>
            </div>
        <% } else { %>
            <div class="badge is-not-member" title="Not A Member">
                <span class="material-symbols-sharp">
                    heart_broken
                </span>
                <p>Not A Member</p>
            </div>
        <% } %>
    </div>
    <div class="horizontal-separator"></div>
    <% if(!user.is_admin || !user.is_member) { %>
        <div class="forms-container">
            <% if(!user.is_admin) { %>
                <form class="form" action="/dashboard/account-status/admin-pass" method="POST">
                    <label class="label" for="adminPass">
                        Admin Code
                    </label>
                    <div class="input-wrapper">
                        <span class="material-symbols-sharp input-icon">
                            security
                        </span>
                        <input data-show-pass='false' class="input-field" type="password" name="adminPass" id="adminPass" />
                        <button data-toggle-pass-visibility class="pass-visibility-button toggle-pass-visibility-button" type="button">
                            <span data-visibility-icon class="material-symbols-sharp input-icon">
                                visibility
                            </span>
                        </button>
                    </div>
                    <button class="button" type="submit">
                        Enable admin status
                    </button>
                </form>
            <% } %>
            <% if(!user.is_admin && !user.is_member) { %>
                <div class="vertical-separator"></div>
                <div class="mobile-horizontal-separator"></div>
            <% } %>
            <% if(!user.is_member){ %>
                <form class="form" action="/dashboard/account-status/member-pass" method="POST">
                    <label class="label" for="memberPass">
                        Member Code
                    </label>
                    <div class="input-wrapper">
                        <span class="material-symbols-sharp input-icon">
                            heart_check
                        </span>
                        <input data-show-pass="false" class="input-field" type="password" name="memberPass" id="memberPass" />
                        <button data-toggle-pass-visibility class="pass-visibility-button toggle-pass-visibility-button" type="button">
                            <span data-visibility-icon class="material-symbols-sharp input-icon">
                                visibility
                            </span>
                        </button>
                    </div>
                    <button class="button" type="submit">
                        Enable member status
                    </button>
                </form>
            <% } %>
        </div>
    <% } %>
</div>
