<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/variables.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/navbar.css">
        <link rel="stylesheet" href="/css/userProfile.css">
        <link rel="stylesheet" href="/css/classes.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@20,100,0..1,-50" />
        <link rel="stylesheet" href="/css/bg.css">
        <script defer src="/js/utilities/noTranslateGoogleIcons.js"></script>
        <script defer src="/js/utilities/toggleMobileNavbar.js"></script>
        <title>
            @<%= profileInfo.username %> profile | On Members Only ðŸ”’
        </title>
        <link rel="apple-touch-icon-precomposed" sizes="57x57" href="/favicons/apple-touch-icon-57x57.png" />
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/favicons/apple-touch-icon-114x114.png" />
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/favicons/apple-touch-icon-72x72.png" />
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/favicons/apple-touch-icon-144x144.png" />
        <link rel="apple-touch-icon-precomposed" sizes="60x60" href="/favicons/apple-touch-icon-60x60.png" />
        <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/favicons/apple-touch-icon-120x120.png" />
        <link rel="apple-touch-icon-precomposed" sizes="76x76" href="/favicons/apple-touch-icon-76x76.png" />
        <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/favicons/apple-touch-icon-152x152.png" />
        <link rel="icon" type="image/png" href="/favicons/favicon-196x196.png" sizes="196x196" />
        <link rel="icon" type="image/png" href="/favicons/favicon-96x96.png" sizes="96x96" />
        <link rel="icon" type="image/png" href="/favicons/favicon-32x32.png" sizes="32x32" />
        <link rel="icon" type="image/png" href="/favicons/favicon-16x16.png" sizes="16x16" />
        <link rel="icon" type="image/png" href="/favicons/favicon-128.png" sizes="128x128" />
        <meta name="application-name" content="&nbsp;"/>
        <meta name="msapplication-TileColor" content="#FFFFFF" />
        <meta name="msapplication-TileImage" content="/favicons/mstile-144x144.png" />
        <meta name="msapplication-square70x70logo" content="/favicons/mstile-70x70.png" />
        <meta name="msapplication-square150x150logo" content="/favicons/mstile-150x150.png" />
        <meta name="msapplication-wide310x150logo" content="/favicons/mstile-310x150.png" />
        <meta name="msapplication-square310x310logo" content="/favicons/mstile-310x310.png" />
    </head>
    <body>
        <%- include('../partials/bg.ejs') %>
        <%- include('../partials/navbar.ejs') %>
        <main>
            <% const pageTitle = `@${locals.profileInfo.username}`; %>
            <%- include('../partials/header.ejs', {pageTitle: pageTitle}) %>
            <div class="content">
                <div class="ppf-and-banner">
                    <img class="banner" src="/images/banner.svg" alt="Banner">
                    <div class="ppf">
                        <img src="<%= profileInfo.profile_picture %>" alt="Profile Picture">
                        <div class="gender <%= profileInfo.gender %>">
                            <span class="material-symbols-sharp">
                                <%= profileInfo.gender %>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="name-date">
                    <h1 class="fullname">
                        <%= profileInfo.first_name + ' ' + profileInfo.last_name %>
                    </h1>
                    <p class="join-date">
                        <span class="material-symbols-sharp">schedule</span>
                        Joined on <%= profileInfo.creation_date %>
                    </p>
                </div>
                <div class="horizontal-separator"></div>
                <div class="bio-status">
                    <div class="bio">
                        <p class="half-opacity section-title">
                            <span class="material-symbols-sharp">
                                person_book
                            </span>
                            Bio
                        </p>
                        <div class="horizontal-separator"></div>
                        <div class="bio-content">
                            <p>
                                <%= profileInfo.bio  %>
                            </p>
                        </div>
                    </div>
                    <div class="vertical-separator"></div>
                    <div class="mobile-horizontal-separator"></div>
                    <div class="account-badges">
                        <p class="half-opacity section-title">
                            <span class="material-symbols-sharp">badge</span>
                            Account status
                        </p>
                        <div class="horizontal-separator"></div>
                        <div class="badges-container">
                            <div class="badge">
                                <div class="wrapper">
                                    <span class="material-symbols-sharp">
                                        <%= profileInfo.is_member ? 'shield_with_heart' : 'heart_broken' %>
                                    </span>
                                    <p>
                                        <%= profileInfo.is_member ? 'Member' : 'Not member' %>
                                    </p>
                                </div>
                            </div>
                            <div class="vertical-separator"></div>
                            <div class="badge">
                                <div class="wrapper">
                                    <span class="material-symbols-sharp">
                                        <%= profileInfo.is_admin ? 'security' : 'remove_moderator' %>
                                    </span>
                                    <p>
                                        <%= profileInfo.is_admin ? 'Admin' : 'Not an admin' %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="horizontal-separator"></div>
                <div class="messages-header">
                    <span class="material-symbols-sharp messages-title-icon">comic_bubble</span>
                    <h2>
                        Messages Written By This User
                    </h2>
                </div>
                <div class="horizontal-separator"></div>
                <% if(locals.profileInfo.messages) { %>
                    <div class="messages-container">
                        <% profileInfo.messages.forEach((message)=>{ %>
                            <div class="message">
                                <p class="title">
                                    <%= message.title %>
                                </p>
                                <div class="horizontal-separator"></div>
                                <p class="message-content">
                                    <%= message.content %>
                                </p>
                                <div class="horizontal-separator"></div>
                                <p class="date">
                                    <%= message.created_at %>
                                </p>
                            </div>
                        <% }) %>
                        <% if(locals.profileInfo.messages.length === 0) { %>
                            <div class="no-messages">
                                <p>
                                    This user has not sent any messages.
                                </p>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </main>
    </body>
</html>
