<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/variables.css">
        <link rel="stylesheet" href="/css/navbar.css">
        <link rel="stylesheet" href="/css/login.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/classes.css">
        <link rel="stylesheet" href="/css/animations.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@20,100,0..1,-50" />
        <script defer src="/js/utilities/togglePassVisibility.js"></script>
        <script defer src="/js/utilities/toggleMobileNavbar.js"></script>
        <title>Login | Members Only ðŸ”’</title>
        <link rel="apple-touch-icon-precomposed" sizes="57x57" href="/favicons/apple-touch-icon-57x57.png" />
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/favicons/apple-touch-icon-114x114.png" />
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/favicons/apple-touch-icon-72x72.png" />
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/favicons/apple-touch-icon-144x144.png" />
        <link rel="apple-touch-icon-precomposed" sizes="60x60" href="/favicons/apple-touch-icon-60x60.png" />
        <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/favicons/apple-touch-icon-120x120.png" />
        <link rel="apple-touch-icon-precomposed" sizes="76x76" href="/favicons/apple-touch-icon-76x76.png" />
        <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/favicons/apple-touch-icon-152x152.png" />
        <link rel="icon" type="image/png" href="/favicons/favicon-196x196.png" sizes="196x196" />
        <link rel="icon" type="image/png" href="/favicons/favicon-96x96.png" sizes="96x96" />
        <link rel="icon" type="image/png" href="/favicons/favicon-32x32.png" sizes="32x32" />
        <link rel="icon" type="image/png" href="/favicons/favicon-16x16.png" sizes="16x16" />
        <link rel="icon" type="image/png" href="/favicons/favicon-128.png" sizes="128x128" />
        <meta name="application-name" content="&nbsp;"/>
        <meta name="msapplication-TileColor" content="#FFFFFF" />
        <meta name="msapplication-TileImage" content="/favicons/mstile-144x144.png" />
        <meta name="msapplication-square70x70logo" content="/favicons/mstile-70x70.png" />
        <meta name="msapplication-square150x150logo" content="/favicons/mstile-150x150.png" />
        <meta name="msapplication-wide310x150logo" content="/favicons/mstile-310x150.png" />
        <meta name="msapplication-square310x310logo" content="/favicons/mstile-310x310.png" />
    </head>
    <body>
        <%- include('../partials/navbar.ejs', {currentPath}) %>
        <main>
            <%- include('../partials/header.ejs', {pageTitle: 'Login'}) %>
            <% if(locals.validationErrors) { %>
                <div class="errors">
                    <% validationErrors.forEach((error)=>{ %>
                        <p>
                            <%= error.msg %>
                        </p>
                    <% }) %>
                </div>
            <% } %>
            <% if(locals.authError) { %>
                <div class="errors">
                    <p>
                        <%= authError %>
                    </p>
                </div>
            <% } %>
            <div class="content">
                <div class="form-container">
                    <div class="logo">
                        <div class="form-logo">
                            <div class="empty"></div>
                        </div>
                        <h2 class="text">Members Only!</h2>
                    </div>
                    <div class="text-container">
                        <h1 class="welcome">Welcome Back <span>!</span></h1>
                        <p class="login-message">Please enter your username and password.</p>
                    </div>
                    <form class="login-form" action="/login" method="POST" >
                        <div class="form-field">
                            <label class="label" for="username">
                                Username
                            </label>
                            <div class="input-wrapper">
                                <span class="material-symbols-sharp input-icon">alternate_email</span>
                                <input class="input-field" type="text" name="username" id="username" value="<%= locals.userInput ? locals.userInput.username : '' %>" required>
                            </div>
                        </div>
                        <div class="form-field">
                            <label class="label" for="password">
                                Password
                            </label>
                            <div class="input-wrapper">
                                <span class="material-symbols-sharp input-icon">lock</span>
                                <input data-show-pass="false" class="input-field" type="password" name="password" id="password" value="<%= locals.userInput ? locals.userInput.password : '' %>"  required/>
                                <button data-toggle-pass-visibility class="visibility-button toggle-pass-visibility-button pass-visibility-button" type="button">
                                    <span data-visibility-icon class="material-symbols-sharp input-icon">visibility</span>
                                </button>
                            </div>
                        </div>
                        <button class="button" type="submit">
                            Log in
                        </button>
                        <p class="register-message">
                            You don't have an account yet? <a href="/register">Register</a> 
                        </p>
                    </form>
                </div>
            </div>
        </main>
    </body>
</html>
