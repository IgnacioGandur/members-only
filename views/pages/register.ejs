<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/register.css">
        <link rel="stylesheet" href="/css/variables.css">
        <link rel="stylesheet" href="/css/navbar.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/classes.css">
        <link rel="stylesheet" href="/css/animations.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@20,100,0..1,-50" />
        <script defer src="/js/utilities/ppf-sound-effect.js"></script>
        <script defer src="/js/utilities/togglePassVisibility.js"></script>
        <script defer src="/js/utilities/noTranslateGoogleIcons.js"></script>
        <script defer src="/js/utilities/toggleMobileNavbar.js"></script>
        <title>Register page</title>
    </head>
    <body>
        <%- include('../partials/navbar.ejs', {currentPath}) %>
        <main>
            <%- include('../partials/header.ejs', {pageTitle: "Register"})  %>
            <% if(locals.validationErrors) { %>
                <div class="errors">
                    <p class="title">
                        The following input fields have problems, please correct them.
                    </p>
                    <ul>
                        <% validationErrors.forEach((error)=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
            <div class="wrapper">
                <div class="form-container">
                    <%- include('../partials/register-form.ejs', {profilePictures}) %>
                </div>
            </div>
        </main>
    </body>
</html>
